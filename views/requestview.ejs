                                      <label class="form-control-alternative form-control"><%=user.date_of_birth%></label>
                                  </div>
                                </div>
                              </div>
                            </div>

                                <hr class="my-4">
                              <!-- Address -->
                              <h6 class="heading-small text-muted mb-4">Contact information</h6>
                              <div class="pl-lg-4">
                                <div class="row">
                                  <div class="col-lg-6">
                                    <div class="form-group focused">
                                      <label class="form-control-label" for="email">Email address</label>
                                      <label class="form-control-alternative form-control"><%=user.email%></label>
                                  </div>
                                  <div class="col-lg-6">
                                    <div class="form-group focused">
