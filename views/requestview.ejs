                              </div>
                              <div class="pl-lg-4">
                              <div class="row">
                                  <div class="col-lg-6">
                                    <div class="form-group focused">
                                      <label class="form-control-label" for='gender'>Gender</label>
                                      <label class="form-control form-control-alternative"><%=user.gender%></label>
                                    </div>
                                  </div>
                                  <div class="col-lg-6">
                                    <div class="form-group focused">
                                      <label class="form-control-label" for="blood_group">Blood group</label>
                                      <label class="form-control form-control-alternative"><%=user.blood_group%></label>
                                  </div>
                                </div>
                              </div>
                            </div>
